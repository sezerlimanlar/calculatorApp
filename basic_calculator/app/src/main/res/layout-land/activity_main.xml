<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/gray">

    <TableRow
        android:layout_width="415dp"
        android:layout_height="40dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow4"
        app:layout_constraintVertical_bias="0.058">

        <Button
            android:id="@+id/button_0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/yellow"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/yellow"
            android:text="."
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button_sqrt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/yellow"
            android:text="√"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button_expo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/yellow"
            android:text="xⁿ"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button_equals"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/yellow"
            android:text="="
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="415dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow2">

        <Button
            android:id="@+id/button_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/yellow"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button_5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/yellow"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button_6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/yellow"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button_minus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/yellow"
            android:text="—"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="415dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow3">

        <Button
            android:id="@+id/button_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/yellow"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/yellow"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/yellow"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button_mod"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/yellow"
            android:text="%"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="415dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow">

        <Button
            android:id="@+id/button_7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/yellow"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button_8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/yellow"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/yellow"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button_plus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/yellow"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="415dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_number">

        <Button
            android:id="@+id/button_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/yellow"
            android:text="←"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button_div"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/yellow"
            android:text="÷"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button_multi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/yellow"
            android:text="*"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button_allDelete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/yellow"
            android:text="C"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />
    </TableRow>

    <EditText
        android:id="@+id/et_number"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_result"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="77dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_operand"
        android:layout_width="78dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/et_number"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="92dp"
        android:layout_height="78dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/s" />

</androidx.constraintlayout.widget.ConstraintLayout>